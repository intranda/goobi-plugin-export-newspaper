<config_plugin>
    <config>
        <!-- individual export setting per project -->
        <project>*</project>
        <export>
            <images>true</images>
            <fulltext>true</fulltext>
            <subfolderPerIssue>true</subfolderPerIssue>
            <exportFolder>/tmp/export/</exportFolder>
            <exportImageFolder>/tmp/export/$(meta.CatalogIDDigital)_tif/</exportImageFolder>
            <exportAltoFolder>/tmp/export/$(meta.CatalogIDDigital)_alto/</exportAltoFolder>
        </export>
        <metsUrl addFileExtension="true">https://example.org/viewer/metsresolver?id=</metsUrl>
        <resolverUrl>https://example.org/viewer/piresolver?id=</resolverUrl>
        
        <!-- file groups -->
        <!-- if no file group is set, the file groups from the project configuration are used -->
        <filegroups>
            <filegroup
                name="DEFAULT"
                path="https://example.org/viewer/content/$(meta.CatalogIDDigital)/1000/0/"
                mimetype=""
                suffix=""
                foldername=""
                filesToIgnore=""
                mimetypeFromFilename="true" />
            <filegroup
                name="FULLTEXT"
                path="https://example.org/viewer/rest/content/alto/$(meta.CatalogIDDigital)/"
                mimetype="xml/alto"
                suffix="xml"
                foldername="getOcrDirectory"
                filesToIgnore=""
                mimetypeFromFilename="false" />
        </filegroups>
        <!-- mets parameter -->
        <!-- if a field is empty or missing, project configuration is used -->
        <metsPointerPath>https://example.org/viewer/metsresolver?id=$(meta.topstruct.CatalogIDDigital).xml</metsPointerPath>
        <metsPointerPathAnchor>https://example.org/viewer/metsresolver?id=$(meta.CatalogIDDigital).xml</metsPointerPathAnchor>
        <metsPointerAddFileExtension>true</metsPointerAddFileExtension>        
        <rightsOwner>Stiftung Haus Oberschlesien</rightsOwner>
        <rightsOwnerLogo>https://example.org/viewer/resources/themes/digishelf/images/dfg_viewer_logo.png</rightsOwnerLogo>
        <rightsOwnerSiteURL></rightsOwnerSiteURL>
        <rightsOwnerContact></rightsOwnerContact>
        <digiprovPresentation>https://example.org/viewer/ppnresolver?id=$(meta.CatalogIDDigital)</digiprovPresentation>
        <digiprovReference></digiprovReference>
        <digiprovPresentationAnchor>https://example.org/viewer/ppnresolver?id=$(meta.topstruct.CatalogIDDigital)</digiprovPresentationAnchor>
        <digiprovReferenceAnchor></digiprovReferenceAnchor>
        <rightsLicense>CC-BY</rightsLicense>
        <rightsSponsor>Neustart Kultur 2021</rightsSponsor>
        <rightsSponsorLogo></rightsSponsorLogo>
        <rightsSponsorSiteURL></rightsSponsorSiteURL>
        <purl></purl>
        <contentIds></contentIds>
    </config>
    
    <!-- global metadata settings -->
    <metadata>
        <purl>_purl</purl>
        <zdbiddigital>CatalogIDPeriodicalDBDigital</zdbiddigital>
        <zdbidanalog>CatalogIDPeriodicalDB</zdbidanalog>
        <identifier>CatalogIDDigital</identifier>
        <issueDate>DateIssued</issueDate>
        <yearDate>CurrentNoSorting</yearDate>
        <titleLabel>TitleDocMain</titleLabel>
        <modsTitle>MainTitle</modsTitle>
        <volumeNumber>VolumeNo</volumeNumber>
        <issueNumber>CurrentNo</issueNumber>
        <sortNumber>CurrentNoSorting</sortNumber>
        <language>DocLanguage</language>
        <location>PhysicalLocation</location>
        <licence>UseAndReproductionLicense</licence>
        <resourceType>TypeOfResource</resourceType>
        <anchorId>AnchorID</anchorId>
        <anchorTitle>AnchorTitle</anchorTitle>
        <anchorZDBIdDigital>AnchorCatalogIDPeriodicalDBDigital</anchorZDBIdDigital>
    </metadata>
    <docstruct>
        <newspaper>Newspaper</newspaper>
        <year>Year</year>
        <month>Month</month>
        <day>Day</day>
        <issue>NewspaperIssue</issue>
        <newspaperStub>NewspaperStub</newspaperStub>
    </docstruct>
</config_plugin>
